{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "jest", "no-only-tests"],
  "env": {
    "node": true,
    "mocha": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": ["error", { 
      "semi": true,
      "singleQuote": true,
      "printWidth": 120,
      "endOfLine": "auto"
    }],
    "linebreak-style": "off",
    "no-return-assign": 1,
    "no-console": 0,
    "spaced-comment": ["error", "always"],
    "max-len": ["error", 120],
    "no-unused-vars": 1,
    "brace-style": 1,
    "no-useless-constructor": 1,
    "no-case-declarations": 1,
    "wrap-iife": 1,
    "dot-notation": 1,
    "no-sequences": 0,
    "prefer-rest-params": 0,
    "padded-blocks": 1,
    "one-var-declaration-per-line": 1,
    "key-spacing": 1,
    "quote-props": 1,
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 1,
    "no-confusing-arrow": 0,
    "no-cond-assign": 1,
    "no-extra-bind": 1,
    "prefer-arrow-callback": 0,
    "object-shorthand": 0,
    "no-else-return": 1,
    "one-var": 1,
    "no-var": 1,
    "default-case": 1,
    "no-unreachable": 1,
    "consistent-return": 0,
    "no-shadow": 0,
    "newline-per-chained-call": 1,
    "eqeqeq": 1,
    "no-unused-expressions": 0,
    "no-underscore-dangle": 0,
    "prefer-const": 1,
    "new-cap": 0,
    "radix": 1,
    "camelcase": 1,
    "prefer-template": 1,
    "import/no-unresolved": 0,
    "no-dupe-keys": 2,
    "no-undef": 2,
    "global-require": 0,
    "func-names": 0,
    "no-only-tests/no-only-tests": "error"
  }
}
